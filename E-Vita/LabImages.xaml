<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="E_Vita.Views.LabImages"  
            Title="Lab Images"  
            BackgroundColor="#891739">  

   <ScrollView>  
       <Grid Padding="0,20" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*,*,*,*">  

           <!-- Header -->  
           <StackLayout Grid.ColumnSpan="5" Padding="0,20">  
               <StackLayout.Background>  
                   <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">  
                       <GradientStop Color="#34111e" Offset="0.0" />  
                       <GradientStop Color="#891739" Offset="0.5" />  
                       <GradientStop Color="#991130" Offset="1.0" />  
                   </LinearGradientBrush>  
               </StackLayout.Background>  
               <Label Text="Lab Images"  
                      TextColor="#e1b184"  
                      FontSize="52"  
                      FontAttributes="Bold"  
                      HorizontalOptions="Center"  
                      FontFamily="Montserrat" />  
           </StackLayout>  

           <!-- Search Section -->  
           <StackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">  
               <Entry x:Name="SearchText" Placeholder="Enter Patient ID"  
                      BackgroundColor="#f8f0e5" WidthRequest="300" FontSize="20"/>  
               <Button Text="Search"  
                       Clicked="OnSearchClicked"  
                       FontSize="24"  
                       BackgroundColor="#e1b184"  
                       TextColor="#891739"  
                       WidthRequest="120"  
                       HeightRequest="50"/>  
           </StackLayout>  

           <!-- Images -->  
           <CollectionView Grid.Row="2" Grid.RowSpan="3" Grid.ColumnSpan="5" x:Name="LabTestImagesControl"  
                           ItemsSource="{Binding labsofthepatient}"  
                           ItemsLayout="VerticalGrid, 2"  
                           Margin="10">  
               <CollectionView.ItemTemplate>  
                   <DataTemplate>  
                       <Frame BorderColor="Wheat" Padding="5" Margin="5">  
                           <Image Source="{Binding ImageSource}" HeightRequest="300" Aspect="AspectFit" />  
                       </Frame>  
                   </DataTemplate>  
               </CollectionView.ItemTemplate>  
           </CollectionView>  

       </Grid>  
   </ScrollView>  
</ContentPage>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E_Vita.Views.LabImages"
             Title="Lab Images"
             BackgroundColor="#891739">

    <ScrollView>
        <Grid Padding="0,20" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*,*,*,*">

            <!-- Header -->
            <StackLayout Grid.ColumnSpan="5" Background="LinearGradientBrush(0,0,0,1,#34111e,#891739,#991130)" Padding="0,20">
                <Label Text="Lab Images"
                       TextColor="#e1b184"
                       FontSize="52"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       FontFamily="Montserrat" />
            </StackLayout>

            <!-- Search Section -->
            <StackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                <Entry x:Name="SearchText" Placeholder="Enter Patient ID"
                       BackgroundColor="#f8f0e5" WidthRequest="300" FontSize="20"/>
                <Button Text="Search"
                        Clicked="OnSearchClicked"
                        FontSize="24"
                        BackgroundColor="#e1b184"
                        TextColor="#891739"
                        WidthRequest="120"
                        HeightRequest="50"/>
            </StackLayout>

            <!-- Images -->
            <CollectionView Grid.Row="2" Grid.RowSpan="3" Grid.ColumnSpan="5" x:Name="LabTestImagesControl"
                            ItemsSource="{Binding labsofthepatient}"
                            ItemsLayout="VerticalGrid, 2"
                            Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Wheat" Padding="5" Margin="5">
                            <Image Source="{Binding ImageSource}" HeightRequest="300" Aspect="AspectFit" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
    </ScrollView>
</ContentPage>
