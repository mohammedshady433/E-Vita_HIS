<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E_Vita.PassReset"
             Title="Nurse Dashboard">
    <Grid BackgroundColor="#1f1f1f">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="4">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>

            <StackLayout VerticalOptions="Center" Orientation="Vertical" Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="4" Background="#3b0054"> 
            
                <!--username-->
                <Label Text="Username" TextColor="AntiqueWhite" FontFamily="Qatar2022 Arabic" FontSize="18" Margin="10"/>
                <Entry BackgroundColor="AntiqueWhite" WidthRequest="200" HeightRequest="40" VerticalOptions="Center" />
                
                <!--Admin ID-->
                <Label Text="Admin ID" TextColor="AntiqueWhite" FontFamily="Qatar2022 Arabic" FontSize="18" Margin="10"/>
                <Entry BackgroundColor="AntiqueWhite" WidthRequest="200" HeightRequest="40" VerticalOptions="Center" />
                
                <!--New Password-->
                <Label Text="New Password" TextColor="AntiqueWhite" FontFamily="Qatar2022 Arabic" FontSize="18" Margin="10"/>
                <Entry BackgroundColor="AntiqueWhite" WidthRequest="200" HeightRequest="40" VerticalOptions="Center" IsPassword="True" />
                
                <!--Admin Password-->
                <Label Text="Admin Password" TextColor="AntiqueWhite" FontFamily="Qatar2022 Arabic" FontSize="18" Margin="10"/>
                <Entry BackgroundColor="AntiqueWhite" WidthRequest="200" HeightRequest="40" VerticalOptions="Center" IsPassword="True"/>

            </StackLayout>
        </Border>
    </Grid>
</ContentPage>