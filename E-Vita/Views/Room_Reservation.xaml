<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E_Vita.Views.Room_Reservation"
             Title="Room Reservation">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Room Reservation" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="#4B0082"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <Label Text="Select Room" 
                   FontSize="18" 
                   TextColor="#4B0082"/>
            <Picker x:Name="avialable_rooms" 
                    Title="Select the room" 
                    WidthRequest="300"
                    HorizontalOptions="Center"/>

            <!-- Patient Search Section -->
            <Label Text="Patient Search" 
                   FontSize="18" 
                   TextColor="#4B0082"/>
            <SearchBar x:Name="patientSearchBar"
                      Placeholder="Search Patient by ID or Name"
                      TextChanged="OnPatientSearchTextChanged"
                      WidthRequest="300"
                      HorizontalOptions="Center"/>
            <Frame BorderColor="#4B0082" 
                   Padding="10" 
                   WidthRequest="300"
                   HorizontalOptions="Center"
                   IsVisible="{Binding IsPatientSearchVisible}">
                <ListView x:Name="patientSearchResults"
                         HeightRequest="150"
                         ItemSelected="OnPatientSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <VerticalStackLayout>
                                    <Label Text="{Binding Name}" FontAttributes="Bold"/>
                                    <Label Text="{Binding ID}" TextColor="Gray"/>
                                </VerticalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Frame>
            <Label x:Name="selectedPatientLabel"
                   Text="Selected Patient: None"
                   FontSize="16"
                   TextColor="#4B0082"
                   HorizontalOptions="Center"/>

            <!-- Doctor Search Section -->
            <Label Text="Doctor Search" 
                   FontSize="18" 
                   TextColor="#4B0082"/>
            <SearchBar x:Name="doctorSearchBar"
                      Placeholder="Search Doctor by ID or Name"
                      TextChanged="OnDoctorSearchTextChanged"
                      WidthRequest="300"
                      HorizontalOptions="Center"/>
            <Frame BorderColor="#4B0082" 
                   Padding="10" 
                   WidthRequest="300"
                   HorizontalOptions="Center"
                   IsVisible="{Binding IsDoctorSearchVisible}">
                <ListView x:Name="doctorSearchResults"
                         HeightRequest="150"
                         ItemSelected="OnDoctorSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <VerticalStackLayout>
                                    <Label Text="{Binding Name}" FontAttributes="Bold"/>
                                    <Label Text="{Binding ID}" TextColor="Gray"/>
                                </VerticalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Frame>
            <Label x:Name="selectedDoctorLabel"
                   Text="Selected Doctor: None"
                   FontSize="16"
                   TextColor="#4B0082"
                   HorizontalOptions="Center"/>

            <Button Text="Reserve Room" 
                    BackgroundColor="#4B0082"
                    TextColor="White"
                    Margin="10" 
                    CornerRadius="20" 
                    WidthRequest="300"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Clicked="SavePatient"/>

            <Button Text="Cancel"
                    BackgroundColor="Transparent"
                    BorderColor="#4B0082"
                    BorderWidth="1"
                    TextColor="#4B0082"
                    CornerRadius="15"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    WidthRequest="300"
                    HorizontalOptions="Center"
                    Margin="0,10,0,20"
                    Clicked="close"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>