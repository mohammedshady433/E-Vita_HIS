<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sfCalendar="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             xmlns:sfDataGrid="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             xmlns:sfListView="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             x:Class="E_Vita.Views.DoctorDashboard"
             Title="Doctor Dashboard">

    <Grid BackgroundColor="#1f1f1f">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border  
        Grid.Row="0"  
        Grid.Column="0"  
        Grid.RowSpan="9"  
        StrokeThickness="0"  
        StrokeShape="RoundRectangle 20"
        BackgroundColor="Transparent"  
        Padding="0"
        HeightRequest="720"
        Margin="2"
        VerticalOptions="End">

            <VerticalStackLayout>
                <VerticalStackLayout.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#e1b184" Offset="0"/>
                        <GradientStop Color="#f9dcc0" Offset="0.5"/>
                        <GradientStop Color="#f9dcc0" Offset="1"/>
                    </LinearGradientBrush>
                </VerticalStackLayout.Background>

                <Image Source="e_vitalogo_01.png" Margin="0,40,10,40"/>
                <!-- Patient Button -->
                <Button Text="Patients Data"   
                FontFamily="Qatar2022 Arabic" FontSize="14" Padding="10"  
                BackgroundColor="#3b0054" TextColor="#f9dcc0"  
                WidthRequest="166" HeightRequest="46" Margin="10"  
                CornerRadius="20"   Clicked="PatientData"
                HorizontalOptions="Center" VerticalOptions="Center"/>
                <!-- Radiology Images Button -->
                <Button Text="Radiology"   
                FontFamily="Qatar2022 Arabic" FontSize="14" Padding="10"  
                BackgroundColor="#3b0054" TextColor="#f9dcc0"  
                WidthRequest="166" HeightRequest="46" Margin="10"  
                CornerRadius="20"  
                HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button Text="Lab Results"   
                        FontFamily="Qatar2022 Arabic" FontSize="14" Padding="10"  
                        BackgroundColor="#3b0054" TextColor="#f9dcc0"  
                        WidthRequest="166" HeightRequest="46" Margin="10"  
                        CornerRadius="20"   
                        HorizontalOptions="Center" VerticalOptions="Center"/>
                
                <Button Text="Operations Room"   FontAutoScalingEnabled="True"
                        FontFamily="Qatar2022 Arabic" FontSize="12" FontAttributes="Bold"
                        BackgroundColor="Red" TextColor="Black"  
                        WidthRequest="166" HeightRequest="46" Margin="10,50,10,10"  
                        CornerRadius="20"   
                        HorizontalOptions="Center" VerticalOptions="Center"/>
                <!-- Logout Button -->
                <Button Text="LogOut"  
                        FontFamily="Qatar2022 Arabic" FontSize="14"   
                        BackgroundColor="#3b0054" TextColor="#f9dcc0"   
                        WidthRequest="166" HeightRequest="46" Margin="10,100,10,10"  
                        CornerRadius="20"
                        HorizontalOptions="Center" VerticalOptions="Center" Clicked="LogOut_Click"/>
            </VerticalStackLayout>
        </Border>
        <!-- calender -->
        <VerticalStackLayout Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="4">
            <sfCalendar:SfCalendar x:Name="MyCalendar" View="Month" SelectionChanged="OnCalendarDateSelected" Margin="10" CornerRadius="20" BackgroundColor="AliceBlue"/>
        </VerticalStackLayout>
        
        
        <!-- patient listview -->
        <VerticalStackLayout Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="4" Grid.RowSpan="4" Margin="5">
            <sfListView:SfListView 
                       x:Name="listView"
                       ItemsSource="{Binding Appointments}"
                       SelectionMode="Single"
                       ItemTapped="SfListView_ItemTapped"
                       ItemSize="100"
                       ItemSpacing="5"
                       AllowSwiping="True"
                       HeightRequest="384">

                <sfListView:SfListView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#f9dcc0"
                        CornerRadius="15"
                        Padding="10">
                            <StackLayout>
                                <Label Text="{Binding PatientName}"
                           FontSize="14"
                           TextColor="#34111e"
                           HorizontalOptions="Center"/>
                                <Label Text="{Binding Time}"
                           FontSize="14"
                           TextColor="#34111e" />
                                <Label TextColor="#3b0054" Text="{Binding PatientPhone}"
                           FontSize="12"/>
                                <Label TextColor="#3b0054" Text="{Binding PatientID}"
                           FontSize="12"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </sfListView:SfListView.ItemTemplate>
            </sfListView:SfListView>
        </VerticalStackLayout>
        
        <!--Alerts-->
        <VerticalStackLayout Grid.Row="4" Grid.RowSpan="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="10">
            <Label Text="Notifications/Alerts" FontSize="16" FontAttributes="Bold" TextColor="#9880E5" Grid.Row="0" />

            <sfListView:SfListView x:Name="NotificationsList" 
                               ItemsSource="{Binding Notifications}" 
                               Grid.Row="1" 
                               HeightRequest="320" 
                               BackgroundColor="#FFF5E6" 
                               >
                <sfListView:SfListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding Timestamp}" FontSize="12" TextColor="Gray" Grid.Column="0" />
                                <StackLayout Grid.Column="1" Margin="10,0,0,0">
                                    <Label Text="{Binding Type}" FontSize="14" FontAttributes="Bold" TextColor="{Binding IsEmergency, Converter={StaticResource EmergencyColorConverter}}" />
                                    <Label Text="{Binding Description}" FontSize="12" TextColor="Black" />
                                </StackLayout>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </sfListView:SfListView.ItemTemplate>
            </sfListView:SfListView>
        </VerticalStackLayout>
        
       <!--Statistics-->
        <VerticalStackLayout Grid.Row="4" Grid.RowSpan="4" Grid.Column="3" Grid.ColumnSpan="4">
            <Label Text="Statistics/Insights" FontSize="16" FontAttributes="Bold" TextColor="#9880E5" Grid.Row="0" />

            <syncfusion:SfCircularChart Grid.Row="1" HeightRequest="330" BackgroundColor="#FFF5E6" >
                <syncfusion:SfCircularChart.Series>
                    <syncfusion:DoughnutSeries ItemsSource="{Binding ChartData}" 
                                          XBindingPath="Category" 
                                          YBindingPath="Value" 
                                          InnerRadius="0.7">
                        <syncfusion:DoughnutSeries.DataLabelSettings>
                            <syncfusion:CircularDataLabelSettings LabelPosition="Outside" />
                        </syncfusion:DoughnutSeries.DataLabelSettings>
                    </syncfusion:DoughnutSeries>
                </syncfusion:SfCircularChart.Series>
            </syncfusion:SfCircularChart>

        </VerticalStackLayout>
        
        
    </Grid>
</ContentPage>